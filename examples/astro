#!/bin/sh
#
# A little demo script that displays astronomical events
#
# Best used in a UTF-8 environment.

# Set this variable to 1 if your terminal has a dark background or 0 if
# it: light.

bg_dark=1

# Set your latitude and longitude correctly for Sunrise/Sunset/Equinox/Solstice
#
# The values below are for Ottawa, Ontario, Canada
latitude="45.420556"
longitude="-75.689722"

remind -g -ibg_dark="$bg_dark" "-i\$Latitude=\"$latitude\"" "-i\$Longitude=\"$longitude\"" -q -@2 - "$@" <<'EOF'
SET $AddBlankLines 0
BANNER %

INCLUDE [$SysInclude]/ansitext.rem

MSG Today is [ansi_bold][today()][ansi_normal].%_

IF bg_dark
   SPECIAL COLOR 255 255 0 Sunrise:               ğŸŒ… [sunrise()] today and [sunrise(today()+1)] tomorrow
   SPECIAL COLOR 255 128 0 Sunset:                ğŸŒ‡ [sunset()] today and [sunset(today()+1)] tomorrow%_
ENDIF
EOF

remind -g -ibg_dark="$bg_dark" "-i\$Latitude=\"$latitude\"" "-i\$Longitude=\"$longitude\"" -q -@2 - "$@" <<'EOF'
SET $AddBlankLines 0
BANNER %
IF bg_dark
   REM [moondatetime(0)] +60 SPECIAL COLOR 255 255 0 New moon:              ğŸŒ‘ [$T] %3 (%b)
   REM [moondatetime(1)] +60 SPECIAL COLOR 255 255 128 First Quarter:         ğŸŒ“ [$T] %3 (%b)
   REM [moondatetime(2)] +60 SPECIAL COLOR 255 255 255 Full moon:             ğŸŒ• [$T] %3 (%b)
   REM [moondatetime(3)] +60 SPECIAL COLOR 255 255 128 Last Quarter:          ğŸŒ— [$T] %3 (%b)
ELSE
   SPECIAL COLOR 128 128 0 Sunrise:               ğŸŒ… [sunrise()] today and [sunrise(today()+1)] tomorrow
   SPECIAL COLOR 128 32 0 Sunset:                ğŸŒ‡ [sunset()] today and [sunset(today()+1)] tomorrow%_

   REM [moondatetime(0)] +60 SPECIAL COLOR 128 128 0 New moon:              ğŸŒ‘ [$T] %3 (%b)
   REM [moondatetime(1)] +60 SPECIAL COLOR 128 128 64 First Quarter:         ğŸŒ“ [$T] %3 (%b)
   REM [moondatetime(2)] +60 SPECIAL COLOR 0 0 0 Full moon:             ğŸŒ• [$T] %3 (%b)
   REM [moondatetime(3)] +60 SPECIAL COLOR 128 128 64 Last Quarter:          ğŸŒ— [$T] %3 (%b)
ENDIF
EOF

echo ""

remind -g -ibg_dark="$bg_dark" "-i\$Latitude=\"$latitude\"" "-i\$Longitude=\"$longitude\"" -q -@2 - "$@" <<'EOF'
SET $AddBlankLines 0
BANNER %

IF $LatDeg >= 0
   REM [soleq(0)] +366 MSG Next Vernal Equinox:   ğŸŒ¼ [$T] %3 (%b)
   REM [soleq(1)] +366 MSG Next Summer Solstice:  ğŸ˜ [$T] %3 (%b)
   REM [soleq(2)] +366 MSG Next Autumnal Equinox: ğŸ‚ [$T] %3 (%b)
   REM [soleq(3)] +366 MSG Next Winter Solstice:  â„ï¸  [$T] %3 (%b)
ELSE
   REM [soleq(0)] +366 MSG Next Autumnal Equinox: ğŸ‚ [$T] %3 (%b)
   REM [soleq(1)] +366 MSG Next Winter Solstice:  â„ï¸  [$T] %3 (%b)
   REM [soleq(2)] +366 MSG Next Vernal Equinox:   ğŸŒ¼ [$T] %3 (%b)
   REM [soleq(3)] +366 MSG Next Summer Solstice:  ğŸ˜ [$T] %3 (%b)
ENDIF

EOF
