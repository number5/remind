   REM [moondatetime(3)] +60 SPECIAL COLOR 255 255 128 Last Quarter:  ğŸŒ— [$T] %3 (%b)
ELSE
   SPECIAL COLOR 128 128 0 Sunrise:       ğŸŒ… [sunrise()] today and [sunrise(today()+1)] tomorrow
   SPECIAL COLOR 128 32 0 Sunset:        ğŸŒ‡ [sunset()] today and [sunset(today()+1)] tomorrow%_

   REM [moondatetime(0)] +60 SPECIAL COLOR 128 128 0 New moon:      ğŸŒ‘ [$T] %3 (%b)
   REM [moondatetime(1)] +60 SPECIAL COLOR 128 128 64 First Quarter: ğŸŒ“ [$T] %3 (%b)
   REM [moondatetime(2)] +60 SPECIAL COLOR 0 0 0 Full moon:     ğŸŒ• [$T] %3 (%b)
   REM [moondatetime(3)] +60 SPECIAL COLOR 128 128 64 Last Quarter:  ğŸŒ— [$T] %3 (%b)
ENDIF

IF $LatDeg >= 0
   REM [soleq(0)] +366 MSG %_Next Vernal Equinox:   ğŸŒ¼ [$T] %3 (%b)
   REM [soleq(1)] +366 MSG Next Summer Solstice:  ğŸ˜ [$T] %3 (%b)
   REM [soleq(2)] +366 MSG Next Autumnal Equinox: ğŸ‚ [$T] %3 (%b)
   REM [soleq(3)] +366 MSG Next Winter Solstice:  â„ï¸  [$T] %3 (%b)
