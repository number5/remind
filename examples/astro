#!/bin/sh
#
# A little demo script that displays astronomical events
#
# Best used in a UTF-8 environment.

remind -g -@2 - <<'EOF'
# Set this variable to 1 if your terminal has a dark background or 0 if
# it is light.

SET bg_dark 1

SET $AddBlankLines 0
BANNER %

IF bg_dark
   SPECIAL COLOR 255 255 0 Sunrise:       ðŸŒ… [sunrise()] today and [sunrise(today()+1)] tomorrow
   SPECIAL COLOR 255 128 0 Sunset:        ðŸŒ‡ [sunset()] today and [sunset(today()+1)] tomorrow

   REM [moondate(0)] +60 SPECIAL COLOR 255 255 0 New moon:      ðŸŒ‘ [moondate(0)] (%b)
   REM [moondate(1)] +60 SPECIAL COLOR 255 255 128 First Quarter: ðŸŒ“ [moondate(1)] (%b)
   REM [moondate(2)] +60 SPECIAL COLOR 255 255 255 Full moon:     ðŸŒ• [moondate(2)] (%b)
   REM [moondate(3)] +60 SPECIAL COLOR 255 255 128 Last Quarter:  ðŸŒ— [moondate(3)] (%b)
ELSE
   SPECIAL COLOR 128 128 0 Sunrise:       ðŸŒ… [sunrise()] today and [sunrise(today()+1)] tomorrow
   SPECIAL COLOR 128 32 0 Sunset:        ðŸŒ‡ [sunset()] today and [sunset(today()+1)] tomorrow

   REM [moondate(0)] +60 SPECIAL COLOR 128 128 0 New moon:      ðŸŒ‘ [moondate(0)] (%b)
   REM [moondate(1)] +60 SPECIAL COLOR 128 128 64 First Quarter: ðŸŒ“ [moondate(1)] (%b)
   REM [moondate(2)] +60 SPECIAL COLOR 0 0 0 Full moon:     ðŸŒ• [moondate(2)] (%b)
   REM [moondate(3)] +60 SPECIAL COLOR 128 128 64 Last Quarter:  ðŸŒ— [moondate(3)] (%b)
ENDIF

EOF
